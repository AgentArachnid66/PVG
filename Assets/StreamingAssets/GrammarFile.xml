  <!-- ################################################################# -->

  <rule id="rootRule">
    <one-of>
      <item>
        <ruleref uri="#actionFirst" />
      </item>
      <item>
        <ruleref uri="#general"/>
      </item>
      <item>
        <ruleref uri="#turn"/>
      </item>      
      <item>
      <ruleref uri="#generalTurn"/>
    </item>
      <item>break</item>
      <item>quit game</item>
    </one-of>
  </rule>

  <rule id="normal">
    <one-of>
      <item>normal</item>
      <item>hand</item>
      <item>hands</item>
    </one-of>
    <tag>out="normal";</tag>
  </rule>

  <rule id="thruster">
    <one-of>
      <item>
        <one-of>
          <item>thruster</item>
          <item>engine</item>
        </one-of>
        <tag>out="pluralThrusters";</tag>
      </item>
      <item>
        <one-of>
          <item>thrusters</item>
          <item>engines</item>
        </one-of>
        <tag>out="singleThruster";</tag>
      </item>
    </one-of>
  </rule>

  <rule id="digging">
    <one-of>
      <item>laser</item>
      <item>lasers</item>
    </one-of>
    <tag>out="digging";</tag>
  </rule>
  
  <rule id="inventory">
    <one-of>
      <item>inventory</item>
      <item>market</item>
      <item>buy screen</item>
      <item>sell screen</item>
    </one-of>
  </rule>

  <rule id="mode">
    <one-of>
      <item>
        <ruleref uri="#thruster"/>
      </item>
      <item>
        <ruleref uri="#normal"/>
      </item>
      <item>
        <ruleref uri="#digging"/>
      </item>
      <item>
        <ruleref uri="#inventory"/>
      </item>
    </one-of>
  </rule>

  <rule id="hand">
    <one-of>
      <item>left</item>
      <item>right</item>
      <item>both</item>
    </one-of>
  </rule>

  <rule id="UIaction">
    <one-of>
      <item>
        <one-of>
          <item>open</item>
        </one-of>
        <tag>out="open";</tag>
      </item>
      <item>
        <one-of>
          <item>close</item>
        </one-of>
        <tag>out="close";</tag>
      </item>
    </one-of>
  </rule>

  <rule id="mechanicAction">
    <one-of>
      <item>
        <one-of>
          <item>activate</item>
          <item>initiate</item>
          <item>engage</item>
        </one-of>
        <tag>out="activate";</tag>
      </item>
      <item>
        <one-of>
          <item>deactivate</item>
          <item>disengage</item>
        </one-of>
        <tag>out="deactivate";</tag>
      </item>
    </one-of>
  </rule>

  <rule id="action">
    <one-of>
      <item>
        <ruleref uri="#UIaction"/>
      </item>
      <item>
        <ruleref uri="#mechanicAction"/>
      </item>
    </one-of>
  </rule>

  <rule id="toggle">
    <one-of>
      <item>on</item>
      <item>off</item>
    </one-of>
  </rule>

  <rule id="actionFirst">
    <ruleref uri="#action" />
    <ruleref uri="#hand" />
    <ruleref uri="#mode"/>
  </rule>

  <rule id="general">
    <ruleref uri="#action"/>
    <ruleref uri ="#mode"/>
  </rule>
  
  <rule id="turn">
    <item>turn</item>
    <ruleref uri="#toggle"/>
    <ruleref uri="#hand"/>
    <ruleref uri="#mode"/>
  </rule>
  
  <rule id="generalTurn">
    <item>turn</item>
    <ruleref uri="#toggle"/>
    <ruleref uri="#mode"/>
  </rule>



</grammar>